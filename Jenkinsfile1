pipeline {
  agent {
    docker { image 'rachidouqa/android_14_emulator' }
  }

  tools {
    nodejs 'NodeJS'
    maven 'mvn'
  }

  stages {
    stage('Test') {
      steps {
        sh 'echo "hi"'
        sh 'sdkmanager --list'
        
        sh 'echo "no" | avdmanager create avd -k "system-images;android-34;google_apis_playstore;x86_64" -n test'
        sh 'emulator -avd test -no-window -gpu off'
      }
    }
  }
}
