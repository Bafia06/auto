pipeline{
    agent {
        label 'windows' 
    }

    tools{
        nodejs 'NodeJS'
        maven 'mvn'
    }

    stages{
        stage('Install appium'){
            steps{
                bat 'npm install -g appium'
            }
        }

        //stage('Download images'){
          //  steps{
               // bat 'sdkmanager ${image}'
            //}
        //}

        stage('Create & Start emulator'){
            steps{
                bat 'avdmanager create avd -c 100M -k $image -n pixel_8_pro'
                bat 'emulator -avd pixel_8_pro -no-window -no-boot-anim'
            }
        }

        stage('Start appium'){
            steps{
                bat 'appium'
            }
        }

        stage('Run the tests'){
            steps{
                bat 'mvn test'
            }
        }

    }
}
