    //}

    stage('Emulator & Appium (Parallel)') {
      parallel {
        stage('Create Emulator') {
            steps{
              bat 'avdmanager -s create avd -c 100M -k %image% -n pixel_8_pro --force'
              bat 'cd C:\\Users\\rouqa\\AppData\\Local\\Android\\Sdk\\emulator'
              bat 'powershell -command "emulator -avd pixel_8_pro -no-windows -gpu off"'
            }
        }

        stage('Start Appium') {
          steps {
            bat 'appium'
          }
        }

        stage('Run Tests') {
          steps {
            bat 'powershell -command "Start-Sleep -s 100"'
            bat 'mvn clean test'
          }
        }
      }

    }

  }

}
